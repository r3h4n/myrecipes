<%= render 'shared/page_title', title: 'showing all recipes' %>

<% @recipes.each do |item| %>
  <div class = "row">
    <div class = "col-md-2">
      <section class ="center">
        
      </section>
    </div>
    <div class = "col-md-8 well">
      <h4><%= link_to item.name, recipe_path(item) %></h4>
      <p><%= truncate(item.description, length: 150) %> </p>
      <p>
        <span class ="quiet"><small>Created <%= time_ago_in_words(item.created_at) %> ago </small></span>
      </p>
    </div>
  </div>
<% end %>