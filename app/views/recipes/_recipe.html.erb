<% obj.each do |item| %>
 
  <div class = "row">
    <div class = "col-md-2">
      <section class ="center">
        
      </section>
    </div>
    <div class = "col-md-8 well">
      <h4><%= link_to item.name, recipe_path(item) %></h4>
      <p><%= truncate(item.description, length: 150) %> </p>
      <p>
        <span class ="quiet"><small>Created <%= time_ago_in_words(item.created_at) %> ago </small></span>
      </p>
        <% if logged_in? && current_chef == item.chef %>
        <div class="recipe-actions">
    <%= link_to "Edit this recipe", edit_recipe_path(item), class: "btn btn-xs btn-warning" %>
    <%= link_to "Delete this recipe", recipe_path(item), method: :delete,
                                      data: { confirm: "Are you sure you want to delete this recipe?" },
                                      class: "btn btn-xs btn-danger" %>
  <% end %>
  </div>
    </div>
  </div>
<% end %>